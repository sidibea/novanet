{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tickets list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Codeticket</th>
                <th>Type</th>
                <th>Createdby</th>
                <th>Sendto</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td><a href="{{ path('ticket_show', { 'id': ticket.id }) }}">{{ ticket.id }}</a></td>
                <td>{{ ticket.codeTicket }}</td>
                <td>{{ ticket.type }}</td>
                <td>{{ ticket.createdBy }}</td>
                <td>{{ ticket.sendTo }}</td>
                <td>{% if ticket.createdAt %}{{ ticket.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if ticket.updatedAt %}{{ ticket.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ ticket.note }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('ticket_show', { 'id': ticket.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('ticket_edit', { 'id': ticket.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ticket_new') }}">Create a new ticket</a>
        </li>
    </ul>
{% endblock %}
